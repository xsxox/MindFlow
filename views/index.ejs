<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MindFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    
    <!-- 导航栏 -->
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">MindFlow</a>
            <div>
                <a href="/articles/new" class="btn btn-success btn-sm">+ 写文章</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h2 class="mb-4">最新文章</h2>
        
        <!-- EJS 循环遍历文章 -->
        <div class="row">
            <% articles.forEach(article => { %>
                <div class="col-md-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title"><%= article.title %></h4>
                            <div class="text-muted small mb-2">
                                发布于: <%= article.createdAt.toLocaleDateString() %>
                            </div>
                            <p class="card-text text-secondary"><%= article.description %></p>
                            <a href="/articles/<%= article.id %>" class="btn btn-primary btn-sm">阅读全文</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>